{
{% if not is_satellite %}
    "data-root": "/persistent_data/docker",
    "iptables": true,
    "log-driver": "loki",
    "log-opts": {
        "loki-url": "http://{{ loki_ip }}:3100/loki/api/v1/push",
        "loki-retries": "5",
        "loki-batch-size": "400",
        "loki-no-verify": "true",
        "mode": "non-blocking",
        "max-buffer-size": "4m"
    },
{% endif %}
    "storage-driver": "overlay2",
    "runtimes": {
      "nvidia": {
        "path": "/usr/bin/nvidia-container-runtime"
      }
    },
    "exec-opts": ["native.cgroupdriver=cgroupfs"]
}
