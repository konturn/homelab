# System-wide msmtp configuration
defaults
auth           on
tls            on
tls_trust_file /etc/ssl/certs/ca-certificates.crt
logfile        /var/log/msmtp.log

account        gmail
host           smtp.gmail.com
port           587
from           konoahko@gmail.com
user           konoahko@gmail.com
password       {{ lookup('env', 'GMAIL_APP_PASSWORD') }}

account default : gmail
